@model IEnumerable<Proyecto>

@if(Model is not null)
{
<div class="container">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var proyecto in Model)
        {
            <div class="col">
                <div class="card h-75">
                    <img src="@proyecto.ImageURL" class="card-img-top" alt="imagen proyecto" />
                    <h5 class="card-title">@proyecto.Titulo</h5>
                    <p class="card-text">@proyecto.Descripcion</p>
                    <div class="card-footer">
                        <a class="btn btn-primary" href="@proyecto.Link" target="_blank" rel="noopener noreferrer">Visitar</a>

                    </div>
                </div>


            </div>
        }

    </div>
</div>
}